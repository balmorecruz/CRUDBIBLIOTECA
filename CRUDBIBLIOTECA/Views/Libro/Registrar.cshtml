@model CRUDBIBLIOTECA.Models.Libro

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">

    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Nuevo Libro</h4>
            </div>

            <form action="@Url.Action("Registrar","Libro")" method="post">
                <div class="form-group">
                    <label>Titulo</label>
                    <input type="text" class="form-control" name="titulo" />
                </div>
                <div class="form-group">
                    <label>ISBN</label>
                    <input type="text" class="form-control" name="isbn" />
                </div>
                <div class="form-group">
                    <label>Año edición</label>
                    <input type="text" class="form-control" name="anio_edicion" />
                </div>
                <div class="form-group">
                    <label>Editorial</label>
                    <input type="text" class="form-control" name="editorial" />
                </div>

                <div class="form-group">
                    <label>Autor</label>
                    @*<input type="text" class="form-control" name="id_autor" />*@

                    <select id="id_autor" class="form-control" name="id_autor">
                        <option value="">Seleccione un autor</option>
                        @foreach (var autor in ViewBag.ListaAutores)
                        {
                            <option value="@autor.idautor">@autor.nombre @autor.apellido</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <textarea class="form-control" name="descripcion"></textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio","Libro")">Volver</a>
            </form>


        </div>

    </div>



</div>

