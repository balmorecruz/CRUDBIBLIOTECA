@model CRUDBIBLIOTECA.Models.Libro

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Libro</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el Libro: @Html.DisplayTextFor(m => m.titulo)?
                </div>
                <form action="@Url.Action("Eliminar","Libro")" method="post">
                    <input type="hidden" class="form-control" name="idlibro" value="@Html.DisplayTextFor(m=>m.idlibro)" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Libro")">Volver</a>

                </form>
            </div>



        </div>


    </div>


</div>