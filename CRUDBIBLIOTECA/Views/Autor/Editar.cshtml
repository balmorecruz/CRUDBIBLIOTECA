@model CRUDBIBLIOTECA.Models.Autor

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row" style="margin-top:30px">

    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar Contacto</h4>
            </div>

            <form action="@Url.Action("Editar","Autor")" method="post">
                <input type="hidden" class="form-control" name="idautor" value="@Html.DisplayTextFor(m=>m.idautor)" />
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="nombre" value="@Html.DisplayTextFor(m=>m.nombre)" />
                </div>
                <div class="form-group">
                    <label>Apellido</label>
                    <input type="text" class="form-control" name="apellido" value="@Html.DisplayTextFor(m=>m.apellido)" />
                </div>
                <div class="form-group">
                    <label>Nacionalidad</label>
                    <input type="text" class="form-control" name="nacionalidad" value="@Html.DisplayTextFor(m=>m.nacionalidad)" />
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio","Autor")">Volver</a>
            </form>


        </div>

    </div>



</div>
